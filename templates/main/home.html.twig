{% extends 'base.html.twig' %}


{% block body %}


<section class="text-center" id="compteur">

    <span><span class="count">421 </span> interventions / jours </span>
    <span><span class="count">45</span> urgences / jours </span>
    <span><span class="count">28</span> salariés </span>
    <span><span class="count">5</span> ambualnces </span>
    <span><span class="count">10</span> VSL </span>
    <span><span class="count">8</span> Taxi </span>

</section>

<section class="container w-100" id="firstScreen">
    <div class="row">
        <div class="col-6">
            <h1 class="display-4 fst-italic text-center">La Clunysoise</h1>
            <p class="lead">L’entreprise « La Clunysoise » est une société d’ambulances privée située à Cluny. Avec à disposition des ambulances, des VSL, mais aussi des taxis.La Clunysoise apporte une réponse efficace et dynamique à toute demande de transports médicalisés ou non tout en participant activement aux besoins permanents d’interventions d’urgences et transferts inter hospitaliers effectués en collaboration avec le Samu et le centre d’appel 15.</p>
        </div>
        
        <div class="col-6">
            <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">

                <div class="carousel-inner text-center">

                    <div class="carousel-item active">
                        <div style="display: flex; justify-content: center; align-items: center;">
                            <img src="{{ asset('Logo_C.png') }}" class="d-block w-100 center-block" alt="...">
                        </div>

                        <div class="carousel-caption d-none d-md-block text-dark">
                            <h2>Ambulance</h2>
                            <p>Some representative placeholder content for the first slide.</p>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <h2> VSL </h2>
                    </div>

                    <div class="carousel-item">
                        <h2> Taxi </h2>
                    </div>

                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>

                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>

            </div>
        </div>

    </div>
</section>



<section id="gridGallery">
    <div class="container">
        <div class="row">

            {% set switchBox = false %}  <!-- Initialisation de la variable switchBox à false -->

            {% for posts in post %}  <!-- Boucle pour chaque post dans la liste post -->
                {% if loop.index is odd %}  <!-- Vérifie si l'index de la boucle est impair -->

                    {% if switchBox %}  <!-- Vérifie la valeur de switchBox -->
                        <div class="box" id="boxTwo">  <!-- Début de la boîte boxTwo -->
                    {% else %}
                        <div class="box" id="boxOne">  <!-- Début de la boîte boxOne -->
                    {% endif %}

                            <!-- Contenu pour les posts avec un ID pair -->
                            <a href="{{ path('app_posts_show', {'slug': posts.slug}) }}">  <!-- Liens vers l'URL du post -->
                                <div class="row">
                                    <div class="col-sm-6">
                                        {% if posts.mediaUrl is not null %}  <!-- Vérifie si l'URL du média existe -->
                                            <img src="upload/images/{{ asset(posts.mediaUrl) }}">  <!-- Affiche l'image du média -->
                                        {% endif %}
                                    </div>
                                    <div>
                                        <p>{{ posts.description | striptags }}</p>  <!-- Affiche la description du post -->
                                    </div>
                                </div>
                            </a>
                        </div>  <!-- Fermeture de la boîte -->

                {% else %}

                    {% if switchBox %}
                        <div class="box" id="boxOne">  <!-- Début de la boîte boxOne -->
                    {% else %}
                        <div class="box" id="boxTwo">  <!-- Début de la boîte boxTwo -->
                    {% endif %}

                            <!-- Contenu pour les posts avec un ID impair -->
                            <a href="{{ path('app_posts_show', {'slug': posts.slug}) }}">  <!-- Liens vers l'URL du post -->
                                <div class="row">
                                    <div class="col-sm-6">
                                        {% if posts.mediaUrl is not null %}  <!-- Vérifie si l'URL du média existe -->
                                            <img src="upload/images/{{ asset(posts.mediaUrl) }}">  <!-- Affiche l'image du média -->
                                        {% endif %}
                                        <div>
                                            <p>{{ posts.description | striptags }}</p>  <!-- Affiche la description du post -->
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>  <!-- Fermeture de la boîte -->

                {% endif %}

                {% if loop.index is divisible by 2 %}  <!-- Vérifie si l'index de la boucle est divisible par 2 -->
                    {% set switchBox = not switchBox %}  <!-- Inverse la valeur de switchBox -->
                {% endif %}
            {% endfor %}  <!-- Fin de la boucle -->

        </div>  <!-- Fermeture de la div.row -->

    </div>  <!-- Fermeture de la div.container -->
</section>  <!-- Fermeture de la section -->


{% endblock %} 