{% extends 'base.html.twig' %}


{% block body %}


<section class="text-center">

    <span><span class="count">421 </span> interventions / jours </span>
    <span><span class="count">45</span> urgences / jours </span>
    <span><span class="count">28</span> salariés </span>
    <span><span class="count">5</span> ambualnces </span>
    <span><span class="count">10</span> VSL </span>
    <span><span class="count">8</span> Taxi </span>

</section>

<section class="container">
    <div class="row rounded text-body-emphasis bg-body-secondary">

        <div class="col-6">
            <h1 class="display-4 fst-italic text-center">La Clunysoise</h1>
            <p class="lead my-3">L’entreprise « La Clunysoise » est une société d’ambulances privée située à Cluny. Avec à disposition des ambulances, des VSL, mais aussi des taxis.La Clunysoise apporte une réponse efficace et dynamique à toute demande de transports médicalisés ou non tout en participant activement aux besoins permanents d’interventions d’urgences et transferts inter hospitaliers effectués en collaboration avec le Samu et le centre d’appel 15.</p>
        </div>
        
        <div class="col-6">
            <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">

                <div class="carousel-inner text-center my-5 py-5">

                    <div class="carousel-item active">
                        <div style="display: flex; justify-content: center; align-items: center;">
                            <img src="{{ asset('Logo_C.png') }}" class="d-block w-100 center-block" alt="...">
                        </div>

                        <div class="carousel-caption d-none d-md-block text-dark">
                            <h2>Ambulance</h2>
                            <p>Some representative placeholder content for the first slide.</p>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <h2> VSL </h2>
                    </div>

                    <div class="carousel-item">
                        <h2> Taxi </h2>
                    </div>

                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>

                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>

            </div>
        </div>
        
    </div>
</section>



<section id="gridGallery">
    <div class="container">
        <div class="row">

            {% set switchBox = false %}

            {% for posts in post %}
                {% if loop.index is odd %}
                    {% if switchBox %}
                        <div class="box" id="boxTwo">
                    {% else %}
                        <div class="box" id="boxOne">
                    {% endif %}
                        <!-- Contenu pour les posts avec un ID pair -->
                        <a href="{{ path('app_posts_show', {'slug': posts.slug}) }}">
                            <div class="row">
                                <div class="col-sm-6">
                                    {% if posts.mediaUrl is not null %}
                                        <img src="upload/images/{{ asset(posts.mediaUrl) }}">
                                    {% endif %}
                                </div>
                                <div class="col-sm-6">
                                    <p>{{ posts.description | striptags }}</p>
                                </div>
                            </div>
                        </a>
                    </div>
                {% else %}
                    {% if switchBox %}
                        <div class="box" id="boxOne">
                    {% else %}
                        <div class="box" id="boxTwo">
                    {% endif %}
                        <!-- Contenu pour les posts avec un ID impair -->
                        <a href="{{ path('app_posts_show', {'slug': posts.slug}) }}">
                            <div class="row">
                                <div class="col-sm-6">
                                    {% if posts.mediaUrl is not null %}
                                        <img src="upload/images/{{ asset(posts.mediaUrl) }}">
                                    {% endif %}
                                    <p class="m-3">{{ posts.description | striptags }}</p>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endif %}

                {% if loop.index is divisible by 2 %}
                    {% set switchBox = not switchBox %}
                {% endif %}
            {% endfor %}

        </div>
        <!--.row-->

    </div>
    <!--.container-->
</section>


{% endblock %} 