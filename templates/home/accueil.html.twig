    <main class="main pt-4">
        <section class="container">
            <div class="row">

                <div class="row">
                    <h2 class="col-12 text-secondary text-center mb-4">Nos {{post|length}} dernières publications</h2>
                </div>


                {% for posts in post %}

                        <div class="col-6">

                            <div class="card my-3 bg-body-tertiary">
                                <div class="card-header  text-uppercase">
                                    <h1>{{ posts.title }}</h1>
                                </div>

                                <div class="card-body">
                                    <img src="upload/images/{{ asset(posts.mediaUrl) }}"> 
                                    <p>{{ posts.description | striptags }}</p>
                                </div>
                          
                                <div class="card-footer  text-muted py-2 fw-normal">
                                    Publié le <span class="text-warning-emphasis">{{ posts.createdAt|date('d/m/Y à H\\hi') }}</span><br/>
                                    {% if posts.updatedAt %}
                                        Modifié le <span class="text-warning-emphasis">{{ posts.updatedAt|date('d/m/Y à H\\hi') }}</span>
                                    {% endif %}
                                </div>
                            </div>

                        </div>

                {% else %}
                    <div class="row">
                        <p class="col-12 text-center alert alert-warning">Aucune publication à afficher.</p>
                    </div>
                {% endfor %}    

            </div>
        </section>
    </main>

